# OmniControlGP - Subject-Driven Image Generation with FLUX
# GPU-optimized Docker container with memory management via mmgp

FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    CUDA_VISIBLE_DEVICES=0 \
    GRADIO_SERVER_NAME=0.0.0.0 \
    GRADIO_SERVER_PORT=7860 \
    GRADIO_ANALYTICS_ENABLED=False \
    HF_HOME=/app/models \
    TORCH_HOME=/app/models \
    MODEL_CACHE_DIR=/app/models

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    wget \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt /app/

# Upgrade pip and install Python dependencies
RUN pip3 install --no-cache-dir --upgrade pip && \
    pip3 install --no-cache-dir -r requirements.txt

# Copy the entire src directory structure
COPY src/ /app/src/

# Copy main application files
COPY gradio_interface.py /app/
COPY startup.sh /app/

# Create assets directory (optional - for example images)
RUN mkdir -p /app/assets

# Create necessary directories
RUN mkdir -p /app/models /app/outputs && \
    chmod +x /app/startup.sh

# Expose Gradio port
EXPOSE 7860

# Health check - disabled during initial setup as model loading takes time
#HEALTHCHECK --interval=30s --timeout=30s --start-period=120s --retries=3 \
#    CMD curl -f http://localhost:7860/ || exit 1

# Run startup script
CMD ["/bin/bash", "/app/startup.sh"]
